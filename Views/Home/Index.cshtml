@model List<appmvclibrary.Models.Sach>
@{
    ViewData["Title"] = "Trang chủ";
}
        <!-- Modal Search Start -->
        <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-fullscreen">
                <div class="modal-content rounded-0">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body d-flex align-items-center">
                        <div class="input-group w-75 mx-auto d-flex">
                            <input type="search" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1">
                            <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal Search End -->


        <!-- Features Start -->
        <div class="container-fluid features mb-5">
            <div class="container py-5">
                <div class="row g-4">
                    <div class="col-md-6 col-lg-6 col-xl-3">
                        <div class="row g-4 align-items-center features-item">
                            <div class="col-4">
                                <div class="rounded-circle position-relative">
                                    <div class="overflow-hidden rounded-circle">
                                        <img src="~/Client/img/features-sports-1.jpg" class="img-zoomin img-fluid rounded-circle w-100" alt="">
                                    </div>
                                </div>
                            </div>
                            <div class="col-8">
                                <div class="features-content d-flex flex-column">
                                    <p class="text-uppercase mb-2">Sách về thể thao</p>
                                    <div class="h6">
                                        HOT
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-3">
                        <div class="row g-4 align-items-center features-item">
                            <div class="col-4">
                                <div class="rounded-circle position-relative">
                                    <div class="overflow-hidden rounded-circle">
                                        <img src="~/Client/img/features-technology.jpg" class="img-zoomin img-fluid rounded-circle w-100" alt="">
                                    </div>
                                </div>
                            </div>
                            <div class="col-8">
                                <div class="features-content d-flex flex-column">
                                    <p class="text-uppercase mb-2">Về công nghệ</p>
                                    <div class="h6">
                                        HOT
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-3">
                        <div class="row g-4 align-items-center features-item">
                            <div class="col-4">
                                <div class="rounded-circle position-relative">
                                    <div class="overflow-hidden rounded-circle">
                                        <img src="~/Client/img/features-fashion.jpg" class="img-zoomin img-fluid rounded-circle w-100" alt="">
                                    </div>
                                </div>
                            </div>
                            <div class="col-8">
                                <div class="features-content d-flex flex-column">
                                    <p class="text-uppercase mb-2">Thực tế ảo</p>
                                    <div class="h6">
                                        HOT
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-3">
                        <div class="row g-4 align-items-center features-item">
                            <div class="col-4">
                                <div class="rounded-circle position-relative">
                                    <div class="overflow-hidden rounded-circle">
                                        <img src="~/Client/img/features-life-style.jpg" class="img-zoomin img-fluid rounded-circle w-100" alt="">
                                    </div>
                                </div>
                            </div>
                            <div class="col-8">
                                <div class="features-content d-flex flex-column">
                                    <p class="text-uppercase mb-2">Khoa học</p>
                                    <div class="h6">
                                        HOT
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Features End -->


        <!-- Main Post Section Start -->
        <div class="container-fluid py-3">
            <div class="container py-3">
                <div class="row g-4">
                    <div class="col-lg-7 col-xl-8 mt-0">
                        <div class="position-relative overflow-hidden rounded">
                            <img src="~/Client/img/news-1.jpg" class="img-fluid rounded img-zoomin w-100" alt="">
                            <div class="d-flex justify-content-center px-4 position-absolute flex-wrap" style="bottom: 10px; left: 0;">
                                
                            </div>
                        </div>
                        <div class="border-bottom py-3">
                            <div class="display-4 text-dark mb-0 link-hover">Chúng tôi cam kết sẽ làm bạn hài lòng</div>
                        </div>
                        <p class="mt-3 mb-4">Chào mừng bạn đến với thư viện của chúng tôi
                        </p>
                        <div class="bg-light p-4 rounded">
                            <div class="news-2">
                                <h3 class="mb-4">HOT</h3>
                            </div>
                            @foreach (var s in Model)
                            {
                                <div class="row g-4 mb-3 align-items-center">
                                    <div class="col-md-6">
                                        <div class="rounded overflow-hidden">
                                            
                                            <img src="@s.Images[0].ImageUrl" class="img-fluid rounded img-zoomin w-100" alt="@s.TenSach">
                                        
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex flex-column">
                                            <a href="#" class="h3">@s.TenSach</a>
                                            <p class="mb-0 fs-5"><i class="bi bi-people-fill">
                                                @{
                                                    var tenTacGia = s.TacGiaSach.Select(x => x.TacGia.Name);
                                                }
                                                Tác giả: @string.Join(", ", tenTacGia)
                                            </i></p>
                                            <p class="mb-0 fs-5">
                                                <i class="bi bi-chat-text-fill"></i>    
                                                Mô tả ngắn: <small class="ml-3 ">@s.MoTaNgan</small>
                                            </p>
                                            <div class="d-flex my-3 gap-3">
                                                <div>
                                                     <a class="btn btn-primary" asp-action="Create" asp-controller="PhieuMuonTra" asp-area="QuanLyPhieuMuonTra" asp-route-id="@s.Id">Mượn sách</a>
                                                </div>
                                                <div>
                                                    <a class="btn btn-primary" asp-action="Index" asp-controller="Sach" asp-area="" asp-route-slug="@s.Slug">Thông tin chi tiết</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                           
                        </div>
                    </div>
                    <div class="col-lg-5 col-xl-4">
                       <div class="bg-light rounded p-4 pt-0">
                            <div class="row g-4">
                                <div class="col-12">
                                    <div class="rounded overflow-hidden">
                                        <img src="~/Client/img/news-3.jpg" class="img-fluid rounded img-zoomin w-100" alt="">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex flex-column">
                                        <div class="h4 mb-2">Những quyển sách được lựa chọn nhiều nhất</div>
                                    </div>
                                </div>
                                
                                @foreach (var item in Model)
                                {
                                    <div class="col-12">
                                        <div class="row g-4 align-items-center">
                                            <div class="col-5">
                                                <div class="overflow-hidden rounded">
                                                    <img src="@item.Images[0].ImageUrl" class="img-zoomin img-fluid rounded w-100" alt="@item.TenSach">
                                                </div>
                                            </div>
                                            <div class="col-7">
                                                <div class="features-content d-flex flex-column">
                                                    <a asp-action="Index" asp-area="" asp-controller="Sach" asp-route-slug="@item.Slug" class="h6">@item.TenSach</a>
                                                    <small><i class="bi bi-people"></i> Tác giả: @string.Join(", ", item.TacGiaSach.Select(x => x.TacGia.Name))</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                
                            </div>
                       </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Latest News Start -->
        <div class="container-fluid latest-news py-3">
            <div class="container py-3">
                <h2 class="mb-4">Đặc sắc</h2>
                <div class="latest-news-carousel owl-carousel">
                    @if (Model?.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <div class="latest-news-item">
                                <div class="bg-light rounded">
                                    <div class="rounded-top overflow-hidden">
                                        <img src="@item.Images[0].ImageUrl" class="img-zoomin img-fluid rounded-top w-100" alt="@item.TenSach">
                                    </div>
                                    <div class="d-flex flex-column p-4">
                                        <a asp-action="Index" asp-area="" asp-controller="Sach" asp-route-slug="@item.Slug" class="h4">@item.TenSach</a>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <a asp-action="" class="btn btn-primary">Đặt sách</a>
                                            <a asp-action="Index" asp-area="" asp-controller="Sach" asp-route-slug="@item.Slug">Thông tin chi tiết</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    
                </div>
            </div>
        </div>
        <!-- Latest News End -->


        <!-- Most Populer News Start -->
        <div class="container-fluid populer-news py-5">
            <div class="container py-5">
                <div class="tab-class mb-4">
                    <div class="row g-4">
                        <div class="col-lg-12 col-xl-12">
                            <div class="border-bottom mb-4">
                                <h2 class="my-4">Sách có nhiều đọc giả ưa chuộng</h2>
                            </div>
                            <div class="whats-carousel owl-carousel">
                                @foreach (var item in Model)
                                {
                                    <div class="latest-news-item">
                                        <div class="bg-light rounded">
                                            <div class="rounded-top overflow-hidden">
                                                <img src="@item.Images[0].ImageUrl" class="img-zoomin img-fluid rounded-top w-100" alt="@item.TenSach">
                                            </div>
                                            <div class="d-flex flex-column p-4">
                                                <a asp-action="Index" asp-area="" asp-controller="Sach" asp-route-slug="@item.Slug" class="h4">@item.TenSach</a>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <a class="btn btn-primary" href="">Mượn sách</a>
                                                    <a asp-action="Index" asp-area="" asp-controller="Sach" asp-route-slug="@item.Slug">Thông tin chi tiết</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                
                            </div>
                            <div class="mt-5 lifestyle">
                                <div class="border-bottom mb-4">
                                    <h1 class="mb-4">Sách mới</h1>
                                </div>
                                <div class="row g-4">
                                    @{
                                        var sachMois = Model.OrderBy(x => x.Created).Take(4);
                                    }
                                    @foreach (var items in sachMois)
                                    {
                                        <div class="col-lg-6">
                                            <div class="lifestyle-item rounded">
                                                <img src="@items.Images[0].ImageUrl" class="img-fluid w-100 rounded" alt="@items.TenSach">
                                                <div class="lifestyle-content">
                                                    <div class="mt-auto d-flex justify-content-between">
                                                        <a href="" class="btn btn-primary">Đặt sách</a>
                                                        <a asp-action="Index" asp-area="" asp-controller="Sach" asp-route-slug="@items.Slug">Thông tin chi tiết</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<!-- Most Populer News End -->